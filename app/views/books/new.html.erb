<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>title</th>
      <th>body</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <tr>
      <% @books.each do |book| %>
      <td><%= link_to book.title, book_path(book) %></td>
      <td><%= link_to book.body, book_path(book) %></td>
      <td>
        <a>showのリンク</a>
      </td>
      <td>
        <a>Editのリンク</a>
      </td>
      <td>
        <a>Destroyのリンク</a>
      </td>
      <% end %>
    </tr>
  </tbody>

</table>
<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Body</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>